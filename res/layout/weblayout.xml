<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@drawable/rainbow_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">
    <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/randomWeb" android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_above="@+id/likeImageButton" android:layout_alignParentTop="true"/>
    <ImageButton
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:id="@+id/likeImageButton"
            android:background="@drawable/like"
            android:layout_marginStart="30dp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <ImageButton
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:id="@+id/dislikeImageButton"
            android:background="@drawable/flike"
            android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NaN"
            android:background="@drawable/bunny"
            android:textColor="#FF00FF"
            android:id="@+id/likeNum" android:layout_alignParentBottom="true"
            android:gravity="center_horizontal|bottom"
            android:layout_toEndOf="@+id/likeImageButton" android:layout_below="@+id/randomWeb"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NaN"
            android:background="@drawable/bunny"
            android:textColor="#FF00FF"
            android:id="@+id/dislikeNum" android:layout_alignParentBottom="true"
            android:gravity="center_horizontal|bottom"
            android:layout_toStartOf="@+id/dislikeImageButton" android:layout_below="@+id/randomWeb"/>
</RelativeLayout>